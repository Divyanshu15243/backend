{
  "info": {
    "name": "Referral System Testing",
    "description": "Test the referral profit-sharing system"
  },
  "item": [
    {
      "name": "1. Register Referrer",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "http://localhost:5055/api/customer/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Referrer User\",\n  \"email\": \"referrer@test.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "2. Get Referrer Profile (Get Referral Code)",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer YOUR_REFERRER_TOKEN"}],
        "url": "http://localhost:5055/api/customer/profile"
      }
    },
    {
      "name": "3. Register Referred User",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "http://localhost:5055/api/customer/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Referred User\",\n  \"email\": \"referred@test.com\",\n  \"password\": \"password123\",\n  \"referralCode\": \"PASTE_REFERRAL_CODE_HERE\"\n}"
        }
      }
    },
    {
      "name": "4. Create Order (as Referred User)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer YOUR_REFERRED_USER_TOKEN"}
        ],
        "url": "http://localhost:5055/api/order/add",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"cart\": [\n    {\n      \"id\": \"PRODUCT_ID\",\n      \"title\": \"Product Name\",\n      \"quantity\": 2,\n      \"price\": 50\n    }\n  ],\n  \"user_info\": {\n    \"name\": \"Referred User\",\n    \"email\": \"referred@test.com\",\n    \"contact\": \"1234567890\",\n    \"address\": \"Test Address\",\n    \"city\": \"Test City\",\n    \"country\": \"Test Country\"\n  },\n  \"subTotal\": 100,\n  \"shippingCost\": 10,\n  \"discount\": 0,\n  \"total\": 110,\n  \"paymentMethod\": \"Cash\"\n}"
        }
      }
    },
    {
      "name": "5. Check Referrer Wallet",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer YOUR_REFERRER_TOKEN"}],
        "url": "http://localhost:5055/api/customer/wallet/wallet"
      }
    },
    {
      "name": "6. Get Wallet Transactions",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer YOUR_REFERRER_TOKEN"}],
        "url": "http://localhost:5055/api/customer/wallet/transactions?page=1&limit=10"
      }
    },
    {
      "name": "7. Get Order Details",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer YOUR_REFERRED_USER_TOKEN"}],
        "url": "http://localhost:5055/api/order/ORDER_ID"
      }
    }
  ]
}
